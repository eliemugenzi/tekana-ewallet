{
  "name": "transactions-microservice",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Elie Mugenzi",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "proto:wallets": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/tew-protos --ts_proto_out=src/transactions node_modules/tew-protos/wallet.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "proto:transactions": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/tew-protos --ts_proto_out=src/transactions node_modules/tew-protos/transactions.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "start": "nest start",
    "start:dev": "npm run prebuild && nest start --watch",
    "proto:install": "npm i git@github.com:eliemugenzi/tew-protos.git",
    "typeorm": "npm run build && npx typeorm -d dist/src/database/data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.2",
    "@nestjs/bullmq": "^10.2.1",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/typeorm": "^10.0.2",
    "@prisma/client": "^5.19.1",
    "@sendgrid/mail": "^8.1.3",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.13.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tew-protos": "github:eliemugenzi/tew-protos",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
