{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Tekana eWallet API Gateway",
  "main": "index.js",
  "author": "Elie Mugenzi",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:dev": "npm run prebuild && nest start --watch",
    "proto:install": "npm i git@github.com:eliemugenzi/tew-protos.git",
    "proto:users": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/tew-protos --ts_proto_out=src/auth node_modules/tew-protos/users.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "proto:wallets": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/tew-protos --ts_proto_out=src/wallet node_modules/tew-protos/wallet.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "proto:transactions": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/tew-protos --ts_proto_out=src/transaction node_modules/tew-protos/transactions.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "build": "nest build"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.2",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.1",
    "@nestjs/microservices": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "tew-protos": "github:eliemugenzi/tew-protos"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
